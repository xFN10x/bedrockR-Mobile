<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background"
    android:theme="@style/Theme.BedrockRMobile"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ScrollView
        android:id="@+id/ElementScroll"
        android:layout_width="0dp"
        android:layout_height="550dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/addon_selector"
        android:contentDescription="Element Scroll"
        android:padding="5dp"
        android:theme="@style/Theme.BedrockRMobile"
        app:layout_constraintBottom_toTopOf="@+id/buildElementsButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:id="@+id/ElementInnerScroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:theme="@style/Theme.BedrockRMobile">


        </LinearLayout>
    </ScrollView>

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/Toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/accentColor"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/Theme.BedrockRMobile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/buildElementsButton"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/button"
        android:contentDescription="@string/build_elements"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/build" />

    <ImageButton
        android:id="@+id/launchMCAndBuild"
        android:layout_width="60dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/button"
        android:contentDescription="Launch Minecraft, and update the addon"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@+id/ElementScroll"
        app:layout_constraintEnd_toStartOf="@+id/launchMCButton"
        app:layout_constraintTop_toBottomOf="@+id/Toolbar"
        app:srcCompat="@drawable/launchmcwimport" />

    <ImageButton
        android:id="@+id/launchMCButton"
        android:layout_width="100dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/button"
        android:contentDescription="Launch Minecraft"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@+id/ElementScroll"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Toolbar"
        app:srcCompat="@drawable/launchmc" />

    <ImageButton
        android:id="@+id/addResourceButton"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/button"
        android:contentDescription="Add Resource"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="@+id/buildElementsButton"
        app:layout_constraintEnd_toStartOf="@+id/buildElementsButton"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/newresource" />

    <ImageButton
        android:id="@+id/reBuildButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/button"
        android:contentDescription="Re-Build Workspace"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@+id/addResourceButton"
        app:layout_constraintEnd_toStartOf="@+id/buildElementsButton"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/rebuild" />

    <ImageButton
        android:id="@+id/addElementButton"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/button"
        android:contentDescription="Add Element"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="@+id/buildElementsButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buildElementsButton"
        app:srcCompat="@drawable/newelement" />

</androidx.constraintlayout.widget.ConstraintLayout>