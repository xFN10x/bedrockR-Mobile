<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" android:enterFadeDuration="0">
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <solid android:color="@color/background" />
            <stroke android:width="5dp" android:color="@color/accentColor" />
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape  android:shape="oval">
            <solid android:color="@color/background" />
            <stroke android:width="3dp" android:color="@color/cardview_dark_background" />
        </shape>
    </item>
</selector>