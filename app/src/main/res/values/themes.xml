<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BedrockRMobile" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
       <item name="android:fontFamily">@font/font</item>
        <item name="android:backdropColor">@color/background</item>
        <item name="android:colorAccent">@color/accentColor</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorHint">@color/darkAccentColor</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="android:windowSplashScreenBackground">@color/background</item>
    </style>

    <style name="Theme.BedrockRMobile.AlertDialog" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="android:fontFamily">@font/font</item>
        <item name="android:background">@color/background</item>
        <item name="android:colorPrimary">@color/accentColor</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>
</resources>